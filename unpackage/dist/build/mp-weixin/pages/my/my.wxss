.container{display:flex;flex-direction:column;align-items:center;width:100%;min-height:100vh;background-color:#f5f5f5;box-sizing:border-box}.header{width:100%;background-color:#2a3654;background:linear-gradient(to right,#2a3654,#3a4c72);padding:40rpx 30rpx;box-sizing:border-box}.user-info{display:flex;align-items:center}.avatar-container{width:140rpx;height:140rpx;border-radius:70rpx;overflow:hidden;background-color:#fff;margin-right:30rpx;border:4rpx solid rgba(255,255,255,.3);box-shadow:0 4rpx 10rpx rgba(0,0,0,.2)}.avatar{width:100%;height:100%}.user-details{display:flex;flex-direction:column}.nickname{font-size:36rpx;color:#fff;font-weight:700;margin-bottom:10rpx}.user-id{font-size:24rpx;color:rgba(255,255,255,.8)}.content{width:100%;padding:30rpx;box-sizing:border-box}.menu-list{width:100%;background-color:#fff;border-radius:12rpx;overflow:hidden;margin-bottom:40rpx;box-shadow:0 2rpx 10rpx rgba(0,0,0,.05)}.menu-item{display:flex;align-items:center;padding:34rpx 30rpx;border-bottom:1rpx solid #f0f0f0}.menu-item:last-child{border-bottom:none}.menu-icon{font-size:40rpx;margin-right:20rpx}.menu-text{flex:1;font-size:30rpx;color:#333}.menu-arrow{font-size:30rpx;color:#999}.action-button{width:100%;height:90rpx;background-color:#fff;border-radius:45rpx;display:flex;justify-content:center;align-items:center;box-shadow:0 2rpx 10rpx rgba(0,0,0,.05)}.action-text{font-size:32rpx;color:#2a3654}.logout-text{color:#ff3a30}
