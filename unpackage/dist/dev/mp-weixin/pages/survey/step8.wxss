
.container {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
		min-height: 100vh;
		background-color: #ffffff;
		box-sizing: border-box;
}
.page {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
		max-width: 750rpx;
		box-sizing: border-box;
}
.survey-content {
		width: 100%;
		display: flex;
		flex-direction: column;
		margin-bottom: 20rpx;
		padding: 0 20rpx;
		box-sizing: border-box;
}
.title-card {
		width: 100%;
		padding: 24rpx 0;
		display: flex;
		justify-content: center;
		align-items: center;
		margin: 40rpx 0 100rpx 0;
		border-radius: 100rpx;
}
.title-card-purple {
		background-color: #F3EAF9;
}
.title-text {
		font-size: 40rpx;
		font-weight: bold;
		color: #6A3EA1;
		text-align: center;
}
.content-section {
		margin: 20rpx 0 40rpx 0;
}
.content-text {
		font-size: 34rpx;
		line-height: 1.6;
		color: #333;
		text-align: justify;
}
.task-section {
		margin: 20rpx 0 40rpx 0;
}
.task-text {
		font-size: 34rpx;
		line-height: 1.6;
		color: #333;
		margin-bottom: 20rpx;
		display: block;
}
.task-item {
		font-size: 34rpx;
		line-height: 1.6;
		color: #333;
		margin: 10rpx 0;
		display: block;
}
.highlight {
		color: #6A3EA1;
		font-weight: bold;
}
.question-box {
		background-color: #E1E7F7;
		border-radius: 15rpx;
		padding: 30rpx;
		margin: 30rpx 0;
		border: 2rpx solid rgba(0,0,0,0.1);
}
.question-text {
		font-size: 32rpx;
		color: #333;
		line-height: 1.6;
		text-align: justify;
}
.selection-section {
		margin: 30rpx 0;
}
.selection-title {
		font-size: 34rpx;
		color: #333;
		font-weight: bold;
		margin-bottom: 10rpx;
		display: block;
}
.selection-subtitle {
		font-size: 30rpx;
		color: #666;
		margin-bottom: 20rpx;
		display: block;
}
.option-list {
		width: 100%;
		display: flex;
		flex-direction: column;
		gap: 20rpx;
		margin: 20rpx 0;
}
.option-item {
		width: 100%;
		background-color: #f2f2f2;
		padding: 30rpx;
		border-radius: 20rpx;
		box-sizing: border-box;
}
.option-selected {
		background-color: #2a3654 !important;
}
.option-selected .option-text {
		color: #ffffff !important;
}
.option-text {
		font-size: 32rpx;
		color: #333;
}
.timing-section, .benefit-section, .personal-section, .plan-section, .feeling-section {
		margin: 40rpx 0;
}
.timing-title, .benefit-title, .personal-title, .plan-title, .feeling-title {
		font-size: 34rpx;
		margin-bottom: 20rpx;
		display: block;
}
.timing-example {
		font-size: 30rpx;
		color: #666;
		margin-bottom: 20rpx;
		display: block;
}
.benefit-subtitle {
		font-size: 32rpx;
		color: #333;
		margin-bottom: 20rpx;
		display: block;
}
.personal-note {
		font-size: 30rpx;
		color: #666;
		margin: 20rpx 0;
		line-height: 1.6;
		display: block;
}
.question-container {
		margin-bottom: 30rpx;
}
.answer-input {
		width: 100%;
		height: 60rpx;
		border: 2rpx solid #666;
		border-radius: 0;
		padding: 0 20rpx;
		font-size: 30rpx;
		box-sizing: border-box;
		background-color: #FFFFFF;
}
.navigation {
		width: 100%;
		display: flex;
		justify-content: space-between;
		margin: 40rpx 0;
		padding: 0 30rpx;
		box-sizing: border-box;
}
.nav-button {
		width: 80rpx;
		height: 80rpx;
		background-color: #e1f3ef;
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.nav-button:active {
		opacity: 0.8;
}
.nav-button.final {
		background-color: #e1f3ef;
}
.nav-icon {
		font-size: 38rpx;
		color: #333;
}
@media screen and (min-width: 768px) {
.page {
			max-width: 960rpx;
}
}
